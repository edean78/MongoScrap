{{!-- Articles --}}
{{#each article}}
<div class="row">
    <div class="col-md-12">
        <div class="card border-danger mb-3">
            <div class="card-body">
                <h4 class="card-title">{{this.title}}</h4>
                <p class="card-text">{{this.summary}}</p>
                <a href="{{this.url}}" target="_blank" class="card_link">Link</a><br>
                <button type="button" class="btn btn-outline-danger save" action="/saved/{{this._id}}" method="POST"
                    data-id={{this._id}}>Save</button>
            </div>
        </div>
    </div>
</div>
{{/each}}