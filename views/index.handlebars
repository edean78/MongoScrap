{{!-- Jumbotron --}}
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-3">University of Georgia Bulldogs Football Program latest news</h1><br>
        <p class="lead">For up to date news on the University of Georgia Football Program Click the Get Dawg News
            button
            above.</p>
    </div>
</div>

{{!-- Articles --}}
<div id="Articles">
    {{#each article}}
    <div class="row">
        <div class="col-md-12">
            <div class="card border-danger mb-3">
                <div class="card-body">
                    <h4 class="card-title">{{this.title}}</h4>
                    <p class="card-text">{{this.summary}}</p>
                    <a href="{{this.url}}" target="_blank" class="card_link">{{this.url}}</a><br>
                    <button type="button" class="btn btn-outline-danger save" data-id={{this._id}}>Save</button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>