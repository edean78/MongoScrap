<div id="wrapper">
    {{!-- Navbar --}}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">UGA News</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03"
            aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/saved">Saved Articles</a>
                </li>
            </ul>
        </div>
    </nav>
    {{!-- Jumbotron --}}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-3">University of Georgia Bulldogs Football Program latest news</h1>
            <p class="lead">Review and add notes to your favorite articles</p>
        </div>
    </div>

    {{!-- Articles --}}
    <div id="Articles">
        {{#each article}}
            {{>article}}
        {{/each}}
    </div>

    {{!-- Notes --}}
    {{#each articles}}
        {{>modal}}
    {{/each}}
</div>